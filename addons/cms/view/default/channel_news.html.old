{layout name="common/layout" /}

<!-- SEO结构化数据 -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "{$__CHANNEL__.seotitle ?: $__CHANNEL__.name}",
  "description": "{$__CHANNEL__.description}",
  "url": "{$__CHANNEL__.url}",
  "breadcrumb": {
    "@type": "BreadcrumbList",
    "itemListElement": [
      {php}$breadcrumb_items = \addons\cms\model\Channel::getBreadcrumb($__CHANNEL__??[], $__ARCHIVES__??[], $__TAGS__??[], $__PAGE__??[], $__DIYFORM__??[], $__SPECIAL__??[]);{/php}
      {volist name="breadcrumb_items" id="item"}
      {
        "@type": "ListItem",
        "position": {$i},
        "name": "{$item.name|htmlentities}",
        "item": "{$item.url}"
      }{eq name="i" value="$breadcrumb_items|count"}{else},{/eq}
      {/volist}
    ]
  }
}
</script>

<div class="news-channel-container">
    <!-- SEO优化的面包屑导航 -->
    <nav aria-label="breadcrumb" class="breadcrumb-seo">
        <ol class="breadcrumb" itemscope itemtype="https://schema.org/BreadcrumbList">
            {php}$breadPos = 0;{/php}
            {cms:breadcrumb id="item"}
            {php}$breadPos++;{/php}
            <li class="breadcrumb-item" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
                <a href="{$item.url}" itemprop="item">
                    <span itemprop="name">{:__($item.name)}</span>
                </a>
                <meta itemprop="position" content="{$breadPos}" />
            </li>
            {/cms:breadcrumb}
        </ol>
    </nav>

    <!-- SEO优化的页面头部 -->
    <header class="page-header-seo">
        <div class="header-main">
            <div class="title-wrapper">
                <h1 class="page-title" itemprop="headline">{:__($__CHANNEL__.name)}</h1>
            </div>
            
            {if $__CHANNEL__.description}
            <div class="page-intro" itemprop="description">
                <p>{$__CHANNEL__.description}</p>
            </div>
            {else}
            <div class="page-intro" itemprop="description">
                <p>探索 <strong>{:__($__CHANNEL__.name)}</strong> 相关的资讯文章，深入了解心理学知识。</p>
            </div>
            {/if}
            
            <!-- 子栏目快速导航 -->
            {php}$hasSubChannels = false;{/php}
            {cms:channellist id="subchan" type="son" typeid="$__CHANNEL__.id" limit="1"}
            {php}$hasSubChannels = true;{/php}
            {/cms:channellist}
            
            {if $hasSubChannels}
            <nav class="sub-channels-nav" aria-label="子分类导航">
                <i class="fa fa-th-list"></i>
                {cms:channellist id="subchan" type="son" typeid="$__CHANNEL__.id"}
                <a href="{$subchan.url}" class="nav-item">
                    {:__($subchan.name)}
                </a>
                {/cms:channellist}
            </nav>
            {/if}
        </div>
    </header>

    <div class="row mt-3">
        <div class="col-xs-12">
            <!-- 栏目列表 -->
            <section class="channel-list-section" aria-label="{:__('栏目列表')}">
                <div class="row channel-row">
                    {cms:channellist id="channel" type="son" typeid="$__CHANNEL__.id" paginate="10"}
                    <div class="col-xs-12 col-md-6 channel-col">
                        <article class="channel-card" itemscope itemtype="https://schema.org/Article">
                            <!-- 栏目标题 -->
                            <div class="channel-header">
                                <h2 class="channel-title">
                                    <a href="{$channel.url}" itemprop="url">
                                        <span itemprop="name">{:__($channel.name)}</span>
                                    </a>
                                </h2>
                                <a href="{$channel.url}" class="channel-more">
                                    {:__('更多')} <i class="fa fa-angle-right"></i>
                                </a>
                            </div>
                            
                            <!-- 特色文章 -->
                            {cms:arclist id="row" channel="$channel.id" limit="0,1"}
                            <a href="{$row.url}" class="featured-news" itemprop="url">
                                <div class="featured-left">
                                    <img src="{$row.image}" 
                                         alt="{$row.title|htmlentities}"
                                         itemprop="image"
                                         loading="lazy">
                                </div>
                                <div class="featured-right">
                                    <h3 class="featured-title" itemprop="headline">{$row.title|htmlentities}</h3>
                                    <p class="featured-desc" itemprop="description">{$row.description|htmlentities}</p>
                                    <div class="featured-meta">
                                        <span class="meta-tag">{:__($channel.name)}</span>
                                        <time datetime="{$row.publishtime|date='Y-m-d',###}">
                                            {$row.publishtime|date='Y年m月d日',###}
                                        </time>
                                        <span class="meta-views">
                                            <i class="fa fa-eye"></i> {$row.views} {:__('浏览')}
                                        </span>
                                    </div>
                                </div>
                            </a>
                            {/cms:arclist}
                            
                            <!-- 文章列表 -->
                            <div class="news-list">
                                {cms:arclist id="row" channel="$channel.id" limit="1,4"}
                                <a href="{$row.url}" class="news-item">
                                    <div class="news-item-left">
                                        <img src="{$row.image}" 
                                             alt="{$row.title|htmlentities}"
                                             loading="lazy">
                                    </div>
                                    <div class="news-item-right">
                                        <h4 class="news-item-title">{$row.title|htmlentities}</h4>
                                        <div class="news-item-meta">
                                            <time datetime="{$row.publishtime|date='Y-m-d',###}">
                                                {$row.publishtime|date='m月d日',###}
                                            </time>
                                            <span><i class="fa fa-eye"></i> {$row.views}</span>
                                        </div>
                                    </div>
                                </a>
                                {/cms:arclist}
                            </div>
                        </article>
                    </div>
                    <!-- 每2个卡片清除浮动 -->
                    {if $i % 2 == 0}
                    <div class="clearfix visible-md-block visible-lg-block"></div>
                    {/if}
                    {/cms:channellist}
                </div>

                <!-- 空状态 -->
                {if $__LASTLIST__->isEmpty()}
                <div class="empty-state">
                    <i class="fa fa-inbox"></i>
                    <p>{:__('暂无栏目')}</p>
                </div>
                {/if}

                <!-- 分页 -->
                {if !$__LASTLIST__->isEmpty()}
                <div class="pagination-wrapper">
                    {cms:pageinfo type="full" /}
                </div>
                {/if}
            </section>
        </div>
    </div>
</div>

<style>
/* 新闻频道列表样式 - 参照funtest设计 */
.news-channel-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 15px;
}

/* 面包屑导航 */
.breadcrumb-seo {
    margin-bottom: 20px;
}

.breadcrumb-seo .breadcrumb {
    background: transparent;
    padding: 8px 0;
    margin: 0;
    font-size: 13px;
    display: flex;
    flex-wrap: wrap;
    list-style: none;
}

.breadcrumb-seo .breadcrumb-item {
    display: inline-flex;
    align-items: center;
}

.breadcrumb-seo .breadcrumb-item + .breadcrumb-item::before {
    content: "›";
    padding: 0 8px;
    color: #adb5bd;
}

.breadcrumb-seo .breadcrumb-item a {
    color: #6c757d;
    text-decoration: none;
    transition: color 0.2s;
}

.breadcrumb-seo .breadcrumb-item a:hover {
    color: #5DBE9E;
}

.breadcrumb-seo .breadcrumb-item:last-child a {
    color: #2c3e50;
    font-weight: 500;
}

/* 页面头部 */
.page-header-seo {
    background: linear-gradient(135deg, #f8f9fa 0%, #fff 100%);
    border-radius: 12px;
    padding: 20px 25px;
    margin-bottom: 25px;
    border: 1px solid #e9ecef;
    box-shadow: 0 2px 8px rgba(0,0,0,0.04);
}

.header-main {
    padding: 10px 0;
}

.title-wrapper {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 12px;
}

.page-title {
    font-size: 28px;
    font-weight: 700;
    color: #2c3e50;
    margin: 0;
    line-height: 1.2;
}

.page-intro {
    margin-bottom: 15px;
}

.page-intro p {
    font-size: 15px;
    color: #495057;
    line-height: 1.6;
    margin: 0;
}

.page-intro strong {
    color: #5DBE9E;
    font-weight: 600;
}

/* 子栏目导航 */
.sub-channels-nav {
    display: flex;
    align-items: center;
    gap: 10px;
    flex-wrap: wrap;
}

.sub-channels-nav i {
    color: #5DBE9E;
    font-size: 14px;
}

.sub-channels-nav .nav-item {
    display: inline-block;
    padding: 6px 16px;
    background: #fff;
    border: 1px solid #e9ecef;
    border-radius: 20px;
    font-size: 13px;
    color: #495057;
    text-decoration: none;
    transition: all 0.3s ease;
    font-weight: 500;
}

.sub-channels-nav .nav-item:hover {
    border-color: #5DBE9E;
    color: #5DBE9E;
    background: #f0fdf9;
    transform: translateY(-1px);
}

/* 栏目列表 */
.channel-row {
    margin: 0 -10px;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
}

@media (max-width: 767px) {
    .channel-row {
        grid-template-columns: 1fr;
    }
}

.channel-col {
    padding: 0 10px;
    margin-bottom: 0;
    float: none !important;
    width: auto !important;
}

.channel-card {
    background: #fff;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
}

.channel-card:hover {
    box-shadow: 0 4px 16px rgba(0,0,0,0.12);
    transform: translateY(-2px);
}

.channel-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px 18px;
    border-bottom: 1px solid #f0f0f0;
}

.channel-title {
    font-size: 18px;
    font-weight: 600;
    color: #2c3e50;
    margin: 0;
}

.channel-title a {
    color: #2c3e50;
    text-decoration: none;
    transition: color 0.3s;
}

.channel-title a:hover {
    color: #5DBE9E;
}

.channel-more {
    font-size: 13px;
    color: #6c757d;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 4px;
    transition: color 0.3s;
}

.channel-more:hover {
    color: #5DBE9E;
}

/* 特色文章 - 横向布局 */
.featured-news {
    display: flex;
    gap: 15px;
    padding: 15px;
    text-decoration: none;
    color: inherit;
    transition: background 0.3s;
    border-radius: 8px;
}

.featured-news:hover {
    background: #f8f9fa;
}

.featured-left {
    flex-shrink: 0;
    width: 240px;
    height: 160px;
    border-radius: 8px;
    overflow: hidden;
    background: #f0f0f0;
}

.featured-left img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s;
}

.featured-news:hover .featured-left img {
    transform: scale(1.05);
}

.featured-right {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-width: 0;
}

.featured-title {
    font-size: 17px;
    font-weight: 600;
    color: #2c3e50;
    margin: 0 0 10px;
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.featured-desc {
    font-size: 14px;
    color: #6c757d;
    margin: 0 0 12px;
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.featured-meta {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 13px;
    color: #95a5a6;
    flex-wrap: wrap;
}

.meta-tag {
    display: inline-block;
    padding: 3px 10px;
    background: #e8f5f1;
    color: #5DBE9E;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 500;
}

.meta-views {
    display: flex;
    align-items: center;
    gap: 4px;
}

.featured-meta i {
    margin-right: 2px;
}

/* 文章列表 */
.news-list {
    list-style: none;
    padding: 0;
    margin: 0;
    min-height: 180px;
}

.news-list li {
    padding: 10px 18px;
    border-top: 1px solid #f0f0f0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: background 0.2s;
}

.news-list li:hover {
    background: #f8f9fa;
}

.news-list li a {
    flex: 1;
    font-size: 14px;
    color: #495057;
    text-decoration: none;
    margin-right: 12px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    transition: color 0.3s;
}

.news-list li a:hover {
    color: #5DBE9E;
}

.news-list li time {
    font-size: 12px;
    color: #95a5a6;
    white-space: nowrap;
}

/* 空状态 */
.empty-state {
    text-align: center;
    padding: 60px 20px;
    color: #95a5a6;
}

.empty-state i {
    font-size: 64px;
    margin-bottom: 15px;
    opacity: 0.5;
}

.empty-state p {
    font-size: 16px;
    margin: 0;
}

/* 分页 */
.pagination-wrapper {
    margin-top: 40px;
    text-align: center;
}

/* 响应式 */
@media (min-width: 992px) {
    .news-channel-container {
        padding: 20px 40px;
    }
    
    .page-title {
        font-size: 32px;
    }
}

@media (max-width: 767px) {
    .news-channel-container {
        padding: 10px;
    }
    
    .page-header-seo {
        padding: 15px;
    }
    
    .page-title {
        font-size: 22px;
    }
    
    .channel-card {
        min-height: auto;
    }
    
    /* 特色文章移动端纵向布局 */
    .featured-news {
        flex-direction: column;
        gap: 12px;
        padding: 12px;
    }
    
    .featured-left {
        width: 100%;
        height: 180px;
    }
    
    .featured-title {
        font-size: 16px;
    }
    
    .featured-desc {
        font-size: 13px;
    }
}
</style>
