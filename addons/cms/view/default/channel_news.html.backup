#content-container .empty-state p {
    font-size: 14px;
    margin: 0;
    color: #999;
}

@media (max-width: 768px) {
    #content-container .channel-card-inner {
        padding: 14px;
    }
    
    #content-container .channel-card {
        margin-bottom: 20px;
    }
    
    #content-container .channel-card-title {
        font-size: 18px;
    }
    
    #content-container .featured-article .media-left {
        flex: 0 0 140px;
    }
    
    #content-container .featured-article .img-zoom {
        height: 100px;
    }
    
    #content-container .featured-article h4 {
        font-size: 15px;
    }
    
    #content-container .featured-article .media-body {
        padding: 10px 12px;
    }
    
    #content-container .article-list-compact li a {
        font-size: 13px;
    }
    
    #content-container .article-date {
        font-size: 11px;
    }
}
</style>

{layout name="common/layout" /}

<div class="container channel-news-container" id="content-container" itemscope itemtype="https://schema.org/CollectionPage">
    <!-- 页面头部 -->
    <header class="page-header">
        <h1 class="category-title" itemprop="name">
            {:__($__CHANNEL__.name)}
            <div class="more pull-right">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb" itemscope itemtype="https://schema.org/BreadcrumbList">
                        <!-- S 面包屑导航 -->
                        {cms:breadcrumb id="item"}
                        <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
                            <a href="{$item.url}" itemprop="item">
                                <span itemprop="name">{:__($item.name)}</span>
                            </a>
                            <meta itemprop="position" content="{$i}" />
                        </li>
                        {/cms:breadcrumb}
                        <!-- E 面包屑导航 -->
                    </ol>
                </nav>
            </div>
        </h1>
    </header>

    <!-- 主内容区域 -->
    <main class="row mt-2">
        <div class="col-xs-12">
            <section class="channel-content-wrapper" itemscope itemtype="https://schema.org/ItemList">
                <meta itemprop="name" content="{:__($__CHANNEL__.name)}栏目列表" />
                <meta itemprop="description" content="{:__($__CHANNEL__.name)}下的子栏目和最新文章" />
                
                <div class="panel-body pt-0">
                    <div class="row channel-grid">
                        <!-- S 栏目列表 -->
                        {cms:channellist id="channel" type="son" typeid="$__CHANNEL__.id" paginate="10"}
                        <div class="col-xs-12 col-md-6 channel-col">
                            <article class="channel-card" itemprop="itemListElement" itemscope itemtype="https://schema.org/Article">
                                <div class="channel-card-inner">
                                    <!-- 栏目标题 -->
                                    <header class="channel-card-header">
                                    <h2 class="channel-card-title">
                                        <a href="{$channel.url}" itemprop="url">
                                            <span itemprop="name">{:__($channel.name)}</span>
                                        </a>
                                    </h2>
                                    <a href="{$channel.url}" class="channel-more-link" title="查看{:__($channel.name)}更多内容">
                                        {:__('More')}
                                        <i class="fa fa-angle-right"></i>
                                    </a>
                                </header>

                                <!-- 特色文章 -->
                                {cms:arclist id="row" channel="$channel.id" limit="0,1" key="j"}
                                <div class="featured-article" itemscope itemtype="https://schema.org/Article">
                                    <div class="media">
                                        <div class="media-left">
                                            <a href="{$row.url}" title="{$row.title|htmlentities}" itemprop="url">
                                                <div class="img-zoom">
                                                    <img src="{$row.image}" 
                                                         alt="{$row.title|htmlentities}"
                                                         itemprop="image"
                                                         loading="lazy"
                                                         width="220"
                                                         height="140">
                                                </div>
                                            </a>
                                        </div>
                                        <div class="media-body">
                                            <h4 class="media-heading">
                                                <a href="{$row.url}" {if $row.style}style="{$row.style_text}"{/if} itemprop="headline">
                                                    {$row.title|htmlentities}
                                                </a>
                                            </h4>
                                            <p itemprop="description">{$row.description|htmlentities}</p>
                                            <meta itemprop="datePublished" content="{$row.publishtime|date='Y-m-d',###}" />
                                        </div>
                                    </div>
                                </div>
                                {/cms:arclist}

                                <!-- 文章列表 -->
                                <ul class="article-list-compact">
                                    {cms:arclist id="row" channel="$channel.id" limit="1,5" key="j"}
                                    <li itemscope itemtype="https://schema.org/Article">
                                        <a href="{$row.url}" 
                                           {if $row.style}style="{$row.style_text}"{/if} 
                                           title="{$row.title|htmlentities}"
                                           itemprop="url">
                                            <span itemprop="headline">{$row.title|htmlentities}</span>
                                        </a>
                                        <time class="article-date" 
                                              datetime="{$row.publishtime|date='Y-m-d',###}"
                                              itemprop="datePublished">
                                            <i class="fa fa-calendar-o"></i> {$row.publishtime|date='m-d',###}
                                        </time>
                                        <meta itemprop="description" content="{$row.description|htmlentities|default=''}" />
                                    </li>
                                    {/cms:arclist}
                                </ul>
                                </div>
                            </article>
                        </div>
                        {if $i % 2==0}
                        <div class="clearfix visible-md-block visible-lg-block"></div>
                        {/if}
                        {/cms:channellist}
                        <!-- E 栏目列表 -->

                        <!-- 空状态提示 -->
                        {if $__LASTLIST__->isEmpty()}
                        <div class="col-xs-12">
                            <div class="empty-state">
                                <i class="fa fa-folder-open-o"></i>
                                <p>{:__('暂无数据')}</p>
                            </div>
                        </div>
                        {/if}
                    </div>

                    <!-- S 分页 -->
                    {if !$__LASTLIST__->isEmpty()}
                    <div class="text-center pager" style="margin-top: 30px;">
                        {cms:pageinfo type="full" /}
                    </div>
                    {/if}
                    <!-- E 分页 -->
                </div>
            </section>
        </div>
    </main>
</div>
