{layout name="common/layout" /}

<!-- SEO结构化数据 -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "{$__CHANNEL__.seotitle ?: $__CHANNEL__.name}",
  "description": "{$__CHANNEL__.description}",
  "url": "{$__CHANNEL__.url}",
  "breadcrumb": {
    "@type": "BreadcrumbList",
    "itemListElement": [
      {cms:breadcrumb id="item"}
      {
        "@type": "ListItem",
        "position": {$i},
        "name": "{$item.name|htmlentities|raw}",
        "item": "{$item.url}"
      }{if !$last},{/if}
      {/cms:breadcrumb}
    ]
  }
}
</script>

<div class="news-channel-container">
    <!-- SEO优化的面包屑导航 -->
    <nav aria-label="breadcrumb" class="breadcrumb-seo">
        <ol class="breadcrumb" itemscope itemtype="https://schema.org/BreadcrumbList">
            {php}$breadPos = 0;{/php}
            {cms:breadcrumb id="item"}
            {php}$breadPos++;{/php}
            <li class="breadcrumb-item" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
                <a href="{$item.url}" itemprop="item">
                    <span itemprop="name">{:__($item.name)}</span>
                </a>
                <meta itemprop="position" content="{$breadPos}" />
            </li>
            {/cms:breadcrumb}
        </ol>
    </nav>

    <!-- SEO优化的页面头部 -->
    <header class="page-header-seo">
        <div class="header-main">
            <div class="title-wrapper">
                <h1 class="page-title" itemprop="headline">{:__($__CHANNEL__.name)}</h1>
            </div>
            
            {if $__CHANNEL__.description}
            <div class="page-intro" itemprop="description">
                <p>{$__CHANNEL__.description}</p>
            </div>
            {else}
            <div class="page-intro" itemprop="description">
                <p>探索 <strong>{:__($__CHANNEL__.name)}</strong> 相关的资讯文章，深入了解心理学知识。</p>
            </div>
            {/if}
            
            <!-- 子栏目快速导航 -->
            <nav class="sub-channels-nav" aria-label="子分类导航">
                <i class="fa fa-th-list"></i>
                {cms:channellist id="subchan" type="son" typeid="$__CHANNEL__.id" limit="8"}
                <a href="{$subchan.url}" class="nav-item">
                    {:__($subchan.name)}
                </a>
                {/cms:channellist}
            </nav>
        </div>
    </header>

    <div class="row mt-3">
        <main class="col-xs-12 col-md-9">
            <!-- 栏目列表 -->
            <section class="channel-list-section" aria-label="{:__('栏目列表')}">
                <div class="row channel-row">
                    {cms:channellist id="channel" type="son" typeid="$__CHANNEL__.id" paginate="10"}
                    <div class="col-xs-12 col-md-6 channel-col">
                        <article class="channel-card" itemscope itemtype="https://schema.org/Article">
                            <!-- 栏目标题 -->
                            <div class="channel-header">
                                <h2 class="channel-title">
                                    <a href="{$channel.url}" itemprop="url">
                                        <span itemprop="name">{:__($channel.name)}</span>
                                    </a>
                                </h2>
                                <a href="{$channel.url}" class="channel-more">
                                    {:__('更多')} <i class="fa fa-angle-right"></i>
                                </a>
                            </div>
                            
                            <!-- 特色文章 -->
                            {cms:arclist id="row" channel="$channel.id" limit="0,1"}
                            <a href="{$row.url}" class="featured-news" itemprop="url">
                                <div class="news-image">
                                    <img src="{$row.image}" 
                                         alt="{$row.title|htmlentities}"
                                         itemprop="image"
                                         loading="lazy"
                                         width="100%"
                                         height="auto">
                                </div>
                                <div class="news-content">
                                    <h3 class="news-title" itemprop="headline">{$row.title|htmlentities}</h3>
                                    <p class="news-desc" itemprop="description">{$row.description|htmlentities}</p>
                                    <div class="news-meta">
                                        <time datetime="{$row.publishtime|date='Y-m-d',###}">
                                            <i class="fa fa-calendar"></i> {$row.publishtime|date='m-d',###}
                                        </time>
                                        <span><i class="fa fa-eye"></i> {$row.views}</span>
                                    </div>
                                </div>
                            </a>
                            {/cms:arclist}
                            
                            <!-- 文章列表 -->
                            <ul class="news-list">
                                {cms:arclist id="row" channel="$channel.id" limit="1,4"}
                                <li>
                                    <a href="{$row.url}">{$row.title|htmlentities}</a>
                                    <time datetime="{$row.publishtime|date='Y-m-d',###}">
                                        {$row.publishtime|date='m-d',###}
                                    </time>
                                </li>
                                {/cms:arclist}
                            </ul>
                        </article>
                    </div>
                    {/cms:channellist}
                </div>

                <!-- 空状态 -->
                {if $__LASTLIST__->isEmpty()}
                <div class="empty-state">
                    <i class="fa fa-inbox"></i>
                    <p>{:__('暂无栏目')}</p>
                </div>
                {/if}

                <!-- 分页 -->
                {if !$__LASTLIST__->isEmpty()}
                <div class="pagination-wrapper">
                    {cms:pageinfo type="full" /}
                </div>
                {/if}
            </section>
        </main>

        <!-- 侧边栏 -->
        <aside class="col-xs-12 col-md-3 sidebar">
            <!-- 热门文章 -->
            <section class="sidebar-widget" aria-labelledby="hot-news-title">
                <h2 class="widget-title" id="hot-news-title">
                    <i class="fa fa-fire"></i> {:__('热门文章')}
                </h2>
                <div class="widget-content">
                    {cms:arclist id="hot" channel="$__CHANNEL__.id" orderby="views" orderway="DESC" limit="5"}
                    <div class="hot-news-item">
                        <a href="{$hot.url}">
                            <div class="hot-number">{$i}</div>
                            <div class="hot-info">
                                <div class="hot-title">{$hot.title|htmlentities|mb_substr=0,30}</div>
                                <div class="hot-views">
                                    <i class="fa fa-eye"></i> {$hot.views|default=0}
                                </div>
                            </div>
                        </a>
                    </div>
                    {/cms:arclist}
                </div>
            </section>

            <!-- 最新文章 -->
            <section class="sidebar-widget" aria-labelledby="recent-news-title">
                <h2 class="widget-title" id="recent-news-title">
                    <i class="fa fa-clock-o"></i> {:__('最新文章')}
                </h2>
                <div class="widget-content">
                    {cms:arclist id="recent" channel="$__CHANNEL__.id" orderby="publishtime" orderway="DESC" limit="5"}
                    <div class="recent-news-item">
                        <a href="{$recent.url}">
                            <div class="recent-image">
                                <img src="{$recent.image}" 
                                     alt="{$recent.title|htmlentities}"
                                     loading="lazy">
                            </div>
                            <div class="recent-info">
                                <div class="recent-title">{$recent.title|htmlentities|mb_substr=0,30}</div>
                                <div class="recent-time">
                                    <i class="fa fa-calendar"></i> {$recent.publishtime|date='Y-m-d',###}
                                </div>
                            </div>
                        </a>
                    </div>
                    {/cms:arclist}
                </div>
            </section>
        </aside>
    </div>
</div>

